<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zingbytes.maxziapp.activity.SignUp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:fontFamily="@font/trajanfont"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Create Account"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_edit"
                android:fontFamily="@font/trajanfont"
                android:hint="Full name"
                android:inputType="text"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="@dimen/fab_margin" />

            <EditText
                android:id="@+id/prename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_edit"
                android:fontFamily="@font/trajanfont"
                android:hint="Preferred Name"
                android:inputType="text"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="@dimen/fab_margin" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_edit"
                android:fontFamily="@font/trajanfont"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="@dimen/fab_margin" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_edit"
                android:fontFamily="@font/trajanfont"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="@dimen/fab_margin" />


            <EditText
                android:id="@+id/promocode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/promo_btn"
                android:fontFamily="@font/trajanfont"
                android:hint="Promo Code [Optional]"
                android:inputType="text"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="@dimen/fab_margin" />


            <Button
                android:id="@+id/createAccount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/circle_btn"
                android:fontFamily="@font/trajanfont"
                android:padding="5dp"
                android:text="CREATE ACCOUNT"
                android:textColor="#fff"
                android:textSize="@dimen/fab_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/trajanfont"
                android:padding="5dp"
                android:text="Already have an account?"
                android:textSize="@dimen/fab_margin" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_btn"
                android:fontFamily="@font/trajanfont"
                android:padding="5dp"
                android:text="LOGIN"
                android:textColor="#fff"
                android:textSize="@dimen/fab_margin" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
